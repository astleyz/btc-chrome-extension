{
  "name": "BTC wallet",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The extension helps you to buy or sell coins in one click",
  "permissions": ["storage"],
  "icons": {
    "16": "images/btc16.png",
    "32": "images/btc32.png",
    "48": "images/btc48.png",
    "128": "images/btc128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://bitcoin.org/*"],
      "js": ["./main.js"],
      "css": ["./main.css"]
    }
  ],
  "browser_action": {
    "default_title": "BTC wallet"
  }
}
